{
  "name": "Kosmos",
  "version": "20.3.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/antonvolkoff/kosmos.git"
  },
  "license": "MIT",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm:watch:cljs\" \"npm:watch:ts\" \"npm:electron:start\"",
    "test": "shadow-cljs compile test",
    "release": "shadow-cljs compile app && tsc && npm run electron:make",
    "watch:cljs": "shadow-cljs watch app test",
    "watch:ts": "tsc --watch --preserveWatchOutput",
    "electron:start": "electron-forge start",
    "electron:make": "electron-forge make",
    "icons:build": "(cd assets; ./build_icons.sh)",
    "icons:reset": "touch out/Kosmos-darwin-x64/Kosmos.app"
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.52",
    "@electron-forge/maker-dmg": "^6.0.0-beta.52",
    "@electron-forge/maker-zip": "6.0.0-beta.52",
    "@types/jest": "^25.2.3",
    "@types/mousetrap": "^1.6.3",
    "@types/node": "^12.12.21",
    "@types/p5": "^0.9.0",
    "@types/react": "^16.9.32",
    "@types/react-dom": "^16.9.6",
    "concurrently": "5.3.0",
    "electron": "8.5.2",
    "jest": "^26.0.1",
    "shadow-cljs": "^2.11.2",
    "ts-jest": "^26.0.0",
    "typescript": "3.8.3"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.3.6",
    "@types/graphlib-dot": "^0.6.1",
    "electron-devtools-installer": "^2.2.4",
    "graphlib-dot": "^0.6.4",
    "htm": "^3.0.3",
    "immer": "^6.0.5",
    "lodash": "4.17.19",
    "mousetrap": "^1.6.5",
    "nrepl-client": "0.3.0",
    "p5": "1.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "redux": "^4.0.5",
    "redux-devtools-extension": "^2.13.8"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./assets/Icon.icns"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-dmg",
          "platforms": []
        }
      ]
    }
  }
}
